<% layout('layout/boilerplate') %>
    <div class="row">
        <div class="col-4 offset-4">
            <div class="card mb-3">
                <img class="card-img-top" src="https://images.unsplash.com/photo-1514043454212-14c181f46583?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1332&q=80" alt="image" srcset="">
                <div class="card-header">
                    <h4>ID: <%=order._id%></h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted"><b>Drone Shot:</b> <%=order.drone_shot%></li>
                    <li class="list-group-item"><b>Start Time:</b> <%= order.start_time%></li>
                    <li class="list-group-item"><b>End Time: </b><%=order.end_time%></li>
                    <li class="list-group-item"><b>Location: </b><%=order.location%></li>
                    <li class="list-group-item"><b>Customer: </b><%=order.customer.name%></li>
                </ul>
                <div class="card-body">
                    <button class="btn btn-primary"><a class="list-style-2" href="/">Home Page</a></button>
                    <button class="btn btn-warning"><a class="list-style-2" href="/order/<%=order._id%>/edit">Edit Details</a></button>
                    <form class="d-inline" action="/order/<%=order.customer._id%>/<%=order._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>